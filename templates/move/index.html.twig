{% extends 'base.html.twig' %}

{% block title %}Move index{% endblock %}

{% block body %}
    <h1>Move index</h1>
    <div><a href="{{ path('app_move_new') }}">Create new</a></div>

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Dat</th>
            <th>Comment</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for move in moves %}
            <tr>
                <td>{{ move.id }}</td>
                <td>{{ move.value }}</td>
                <td>{{ move.dat ? move.dat|date('Y-m-d') : '' }}</td>
                <td>{{ move.comment }}</td>
                <td>
                    <a href="{{ path('app_move_show', {'id': move.id}) }}">show</a>
                    <a href="{{ path('app_move_edit', {'id': move.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div><a href="{{ path('app_move_new') }}">Create new</a></div>
{% endblock %}
