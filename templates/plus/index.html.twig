{% extends 'base.html.twig' %}

{% block title %}Plus index{% endblock %}

{% block body %}
    <h1>Plus index</h1>
    <div><a href="{{ path('app_plus_new') }}">Create new</a></div>

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Dat</th>
            <th>Comment</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for plu in pluses %}
            <tr>
                <td>{{ plu.id }}</td>
                <td>{{ plu.value }}</td>
                <td>{{ plu.dat ? plu.dat|date('d-m-Y') : '' }}</td>
                <td>{{ plu.comment }}</td>
                <td>
                    <a href="{{ path('app_plus_show', {'id': plu.id}) }}">show</a>
                    <a href="{{ path('app_plus_edit', {'id': plu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div><a href="{{ path('app_plus_new') }}">Create new</a></div>
{% endblock %}
