{% extends 'base.html.twig' %}

{% block title %}PlusMinusTable{% endblock %}

{% block body %}
    <div class="content1">
        <h1>{{ title }}</h1>
        {% if records1.(0) is defined %}
            <h3>{{ records1|length }} records</h3>
            <table>
                <tr>
                    {% for col in records1.(0)|keys %}
                        {% if col|first != 'x' %}
                            <th>{{ col|slice(1)|humanize }}</th>
                        {% endif %}
                    {% endfor %}
                    {% if tab >= 0 %}
                        <th>&nbsp;</th>
                    {% endif %}
                </tr>
                {% for record1 in records1 %}
                    <tr>
                        {% for col in record1|keys %}
                            {% if col|first != 'x' %}
                                {% if col|first == 'n' %}
                                    {% set tdStyle = ' style="text-align: right"' %}
                                {% else %}
                                    {% set tdStyle = '' %}
                                {% endif %}
                                {% if record1.(col) == '0.00' %}
                                    {% set tdElement = '' %}
                                {% else %}
                                    {% set tdElement = record1.(col) %}
                                {% endif %}
                                <td{{ tdStyle|raw }}>{{ tdElement }}</td>
                            {% endif %}
                        {% endfor %}
                        {% if tab >= 0 %}
                            <td>
                                <a href="{{ path('route_sql') }}/{{ tab }}/{{ record1.sid }}"{% if id == record1.sid %} style="color: yellow"{% endif %}>==></a>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <h3>no records found</h3>
        {% endif %}
    </div>
    {% if records2.(0) is defined %}
        <div class="content2">
            <h1>Details</h1>
            <h3>{{ records2|length }} records</h3>
            <table>
                <tr>
                    {% for col in records2.(0)|keys %}
                        {% if col|first != 'x' %}
                            <th>{{ col|slice(1)|humanize }}</th>
                        {% endif %}
                    {% endfor %}
                </tr>
                {% for record2 in records2 %}
                    <tr>
                        {% for col in record2|keys %}
                            {% if col|first != 'x' %}
                                <td{% if col|first == 'n' %} style="text-align: right"{% endif %}>{{ record2.(col) == '0.00' ? '' : record2.(col) }}</td>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% endif %}
{% endblock %}
